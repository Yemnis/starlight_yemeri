# Node Environment
NODE_ENV=development
PORT=3000

# OpenAI Whisper API
OPENAI_API_KEY=sk-proj-your-key-here

# GCP Configuration
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=us-central1
GCP_SERVICE_ACCOUNT_KEY=./key.json

# Cloud Storage
GCS_BUCKET=your-project-id-video-assets

# Vertex AI
VERTEX_AI_LOCATION=us-central1
GEMINI_NANO_BANANA_MODEL=gemini-2.5-flash-nano-banana
GEMINI_PRO_MODEL=gemini-1.5-pro
EMBEDDING_MODEL=text-embedding-004

# Vector Search
VECTOR_INDEX_ID=projects/your-project/locations/us-central1/indexes/your-index-id
VECTOR_INDEX_ENDPOINT=projects/your-project/locations/us-central1/indexEndpoints/your-endpoint-id

# Firestore
FIRESTORE_DATABASE=(default)

# API Configuration
MAX_VIDEO_SIZE_MB=500
SIGNED_URL_EXPIRY_HOURS=1
MAX_SCENES_PER_VIDEO=20
SCENE_DETECTION_THRESHOLD=0.4

# FFmpeg Configuration
FFMPEG_AUDIO_BITRATE=128k
FFMPEG_SAMPLE_RATE=16000
FFMPEG_THUMBNAIL_SIZE=1024x1024
